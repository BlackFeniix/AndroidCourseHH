<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sunflower</item>
        <item name="colorPrimaryDark">@color/squash</item>
        <item name="android:textColorPrimary">@color/greyish_brown</item>

        <!--    windowBackground only affects the main window's background.
               colorBackground affects not only the background of the main window but also of all components e.g.
                dialogs unless you override it in the component layout. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextUserDataStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="TextYellowStringStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/squash</item>
    </style>

    <style name="TextGreyFieldStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>
</resources>
