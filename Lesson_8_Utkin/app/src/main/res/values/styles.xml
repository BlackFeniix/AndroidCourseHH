<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mango_two</item>
        <item name="colorPrimaryDark">@color/mango</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextStyleNoteTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="TextStyleNoteDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/warm_grey_three</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>
</resources>
